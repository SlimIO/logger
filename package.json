{
    "name": "@slimio/logger",
    "version": "0.1.2",
    "description": "SlimIO Sonic Logger",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "prepublishOnly": "pkg-ok",
        "test": "cross-env psp && nyc --reporter=lcov node test/test.js",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "codecov",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/logger.git"
    },
    "keywords": [
        "SlimIO",
        "logger",
        "sonic",
        "low-overhead"
    ],
    "files": [
        "index.js",
        "index.d.ts",
        "src"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/logger/issues"
    },
    "homepage": "https://github.com/SlimIO/logger#readme",
    "dependencies": {
        "flatstr": "^1.0.12",
        "kleur": "^3.0.3",
        "sonic-boom": "^1.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^12.1.1",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^4.1.0",
        "@slimio/is": "^1.5.1",
        "@slimio/psp": "^0.11.1",
        "codecov": "^3.7.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.0.0",
        "husky": "^4.2.5",
        "japa": "^3.0.1",
        "jsdoc": "^3.6.4",
        "nyc": "^15.0.1",
        "pkg-ok": "^2.3.1",
        "premove": "^1.0.0"
    },
    "engines": {
        "node": ">=12"
    },
    "husky": {
        "hooks": {
            "pre-push": "cross-env eslint index.js && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "nyc": {
        "check-coverage": true,
        "per-file": false,
        "lines": 50,
        "statements": 50,
        "functions": 50,
        "branches": 50
    }
}
